<h2>☆ ☆ ☆Create a Profile☆ ☆ ☆</h2>


<% if flash[:error] %>
    <% flash[:error].each do |e| %>
        <%= e %>
    <% end %>
<% end %>


<%= form_for @blogger do |f|%>
<%= f.label :name %>
<%= f.text_field :name%>
<br><br>
<%= f.label :bio %>
<%= f.text_field :bio%>
<br><br>
<%= f.label :age %>
<%= f.number_field :age%>
<br><br>
<%= f.submit "✩ create profile ✩"%>
<% end %>
